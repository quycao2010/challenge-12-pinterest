<% if notice.present? %>
  <div id="notice"> 
    <div class="alert alert-warning" >
      <strong><%= notice %></strong>
    </div>
  </div>
<% end %>
<div id="pins" class="row transitions-enabled">
  <% @pins.sort_by{ |pin| -pin.get_likes.size }.each do |pin| %>
      <div class="box panel panel-default col-md-6">
        <%= link_to (image_tag pin.image ), pin_path(pin) %>
        <div class="panel-body">
          <h3><%= pin.title %></h3>
        </div>
      </div>
  <% end %>
</div>
<script>
  setTimeout(() => {
   document.getElementById('notice').innerHTML = ''; 
  }, 3000);
</script>